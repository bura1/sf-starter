{% extends 'dashboard/base.html.twig' %}

{% block title %}Product categories{% endblock %}

{% block dashboard %}
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Product categories</li>
        </ol>
    </nav>

    <div class="card">
        <h3 class="card-header">Product categories</h3>
        <div class="card-body">
            <table class="table align-middle bg-white">
                <thead class="bg-light">
                <tr>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr {{ stimulus_controller('product-category') }}>
                        <td {{ stimulus_target('product-category', 'name') }}>{{ category.name }}</td>
                        <td>
                            <a href="{{ path('edit_product_category', {'categoryId': category.id}) }}">Edit</a>
                            <span class="ms-3 text-danger cursor-pointer" data-action="click->product-category#delete">Delete</span>
                            <div class="d-none" {{ stimulus_target('product-category', 'id') }}>{{ category.id }}</div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('add_new_product_category') }}" class="btn btn-primary">Add new product category</a>
        </div>
    </div>

{% endblock %}